




<view class="section section_gap">
  <text class="section__title">红色</text>
  <view class="body-view">
    <slider min="0" max="255" step='1' bindtap='redfun' show-value/>
  </view>
  <text class="section__title">绿色</text>
  <view class="body-view">
    <slider min="0" max="255" bindtap='greenfun' show-value/>
  </view>
  <text class="section__title">蓝色</text>
  <view class="body-view">
    <slider min="0" max="255" bindchange='bluefun' show-value/>
  </view>
  <view class='color-zone'  style="background-color:rgb({{red}},{{green}},{{blue}})">
</view>


</view>